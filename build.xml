<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="www/bin"/>
        <jar destfile="www/bin/TRGeneration.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="TRGeneration"/>
            </manifest>
        </jar>
    </target>


</project>
